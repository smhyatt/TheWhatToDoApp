<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/colourful"
    android:padding="0dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/spin_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="450px"
        android:layout_marginBottom="50px"
        android:text="YOU SHOULD"
        android:textColor="#d3d8e3"
        android:textSize="120px" />

    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150px"
        android:layout_marginBottom="150px"
        android:gravity="center_horizontal"
        android:textColor="#d3d8e3"
        android:textStyle="bold"
        android:textSize="60px" />

    <Button
        android:id="@+id/try_again_button"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="1dp"
        android:background="#DD42A5F5"
        android:text="I want to try again!"
        android:textColor="#d3d8e3"
        android:textSize="18sp" />

    <Button
        android:id="@+id/see_all_button"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        android:background="#DD42A5F5"
        android:text="I want to do it all!"
        android:textColor="#d3d8e3"
        android:textSize="18sp" />

</LinearLayout>


